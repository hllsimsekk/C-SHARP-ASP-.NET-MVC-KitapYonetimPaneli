@{
    ViewData["Title"] = "Home Page";
}

<button type="button" class="btn btn-success" name="btnEkle">
    Kitap Ekle
</button> 

<div class="kitaplistesi">
    <table id="dtKitapListesi" class="display" style="width:100%">
        <thead>
            <tr>
                <th></th>
                <th>Kitap Adı</th>
                <th>Yazar Adı</th>
                <th>Kategori</th>
                <th>Kitap Fiyatı</th>
            </tr>
        </thead>
    </table>
</div>



<button type="button" class="btn btn-primary" name="btnListele">
    Liste Yenile
</button>

<!-- Modal -->
<div class="modal fade" id="kitapDetayModel" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-keyboard="false" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Kitap Detay</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" name="id" />
                <div class="mb-3 row">
                    <label for="ad" class="col-sm-4 col-form-label">Kitap Adı :</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" name="ad" />
                    </div>
                </div>

                <div class="mb-3 row">
                    <label for="kategori_id" class="col-sm-4 col-form-label">Kategori :</label>
                    <div class="col-sm-8">
                        <select class="form-select" name="kategori_id"></select>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label for="yazar_id" class="col-sm-4 col-form-label">Yazar Adı :</label>
                    <div class="col-sm-8">
                        <select class="form-select" name="yazar_id"></select>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label for="fiyat" class="col-sm-4 col-form-label">Fiyat :</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" name="fiyat" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" name="btnSil" >Sil </button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                <button type="button" class="btn btn-primary">Kaydet</button>
                
            </div>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="kitapEkleModel" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-keyboard="false" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Kitap Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <input type="hidden" name="id" />
                <div class="mb-3 row">
                    <label for="kitap_ad" class="col-sm-4 col-form-label">Kitap Adı :</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" name="kitap_ad" />
                    </div>
                </div>

                <div class="mb-3 row">
                    <label for="kategori_ad" class="col-sm-4 col-form-label">Kategori Adı :</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" name="kategori_ad" />
                    </div>
                </div>

                <div class="mb-3 row">
                    <label for="yazar_ad" class="col-sm-4 col-form-label">Yazar Adı :</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" name="yazar_ad" />
                    </div>
                </div>

                <div class="mb-3 row">
                    <label for="fiyat2" class="col-sm-4 col-form-label">Fiyat :</label>
                    <div class="col-sm-8">
                        <input type="number" class="form-control" name="fiyat2" />
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                <button type="button" class="btn btn-primary">Kaydet</button>
            </div>
        </div>
    </div>
</div>



<script src="~/js/modul/kitap/kitap.js"></script>
